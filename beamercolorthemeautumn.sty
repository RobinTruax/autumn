\mode<presentation>

% Underlying colors
\definecolor{autumn-ivory}          {rgb}{1.000, 0.995, 0.980}
\definecolor{autumn-green}          {rgb}{0.471, 0.477, 0.028}
\definecolor{autumn-red}            {rgb}{0.550, 0.050, 0.000}
\definecolor{autumn-brown}          {rgb}{0.350, 0.240, 0.140}
\definecolor{autumn-light-grey}     {rgb}{0.720, 0.720, 0.720}
\definecolor{autumn-grey}           {rgb}{0.500, 0.500, 0.500}
\definecolor{autumn-dark-grey}      {rgb}{0.250, 0.250, 0.250}

% Structure of the presentation
    % Global definitions
    \setbeamercolor*{normal text}{fg = autumn-dark-grey}
    \setbeamercolor*{separation line}{fg = autumn-light-grey}
    \setbeamercolor*{fine separation line}{fg = autumn-light-grey}
    
    % Background
    \setbeamercolor*{background canvas}{bg=autumn-ivory}
    \setbeamercolor*{background}{bg=autumn-ivory}
    
    % Title page and headers
    % \setbeamercolor*{title page header}{fg=white}
    \setbeamercolor*{title}{fg=autumn-green}
    \setbeamercolor*{subtitle}{fg=autumn-green}
    \setbeamercolor*{author}{fg=autumn-brown}
    \setbeamercolor*{institute}{fg=autumn-brown}
    \setbeamercolor*{date}{fg=autumn-brown}
    \setbeamercolor*{part name}{fg = autumn-green}
    \setbeamercolor*{section name}{fg = autumn-green}
    \setbeamercolor*{subsection name}{fg = autumn-green}
    
    % Table of Contents
    \setbeamercolor*{section in toc}{fg = autumn-brown}
    \setbeamercolor*{subsection in toc}{fg = autumn-brown}
    \setbeamercolor*{subsubsection in toc}{fg = autumn-brown}
    
    \setbeamercolor*{section number projection}{fg = autumn-brown}
    \setbeamercolor*{subsection number projection}{fg = autumn-brown}
    \setbeamercolor*{subsubsection number projection}{fg = autumn-brown}
    
    % Bibliography
    \setbeamercolor*{bibliography entry author}{fg = autumn-dark-grey}
    \setbeamercolor*{bibliography entry title}{fg = autumn-dark-grey}
    \setbeamercolor*{bibliography entry location}{fg = autumn-dark-grey}
    \setbeamercolor*{bibliography entry note}{fg = autumn-dark-grey}
    \setbeamercolor*{bibliography item}{fg = autumn-red}
    
    % Note page
    \setbeamercolor*{note page}{fg = autumn-dark-grey}
    \setbeamercolor*{note title}{fg = autumn-dark-grey}
    
    % Structure of a frame
    \setbeamercolor*{headline}{fg = autumn-brown}
    \setbeamercolor*{footline}{fg = autumn-brown}
    \setbeamercolor*{page number in head/foot}{fg = autumn-brown}
    \setbeamercolor*{sidebar}{fg = autumn-brown}
    \setbeamercolor*{section in sidebar}{fg = autumn-green}
    \setbeamercolor*{subsection in sidebar}{fg = autumn-green}
    \setbeamercolor*{subsubsection in sidebar}{fg = autumn-green}
    \setbeamercolor*{title in sidebar}{fg = autumn-green}
    \setbeamercolor*{author in sidebar}{fg = autumn-green}
    \setbeamercolor*{institute in sidebar}{fg = autumn-green}
    \setbeamercolor*{date in sidebar}{fg = autumn-green}

% Structure of a frame
    % Headlines and footlines
    \setbeamercolor*{headline}{fg = autumn-dark-grey}
    \setbeamercolor*{footline}{fg = autumn-dark-grey}
    \setbeamercolor*{page number in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{separation line}{fg = autumn-dark-grey}
    \setbeamercolor*{author in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{title in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{title in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{date in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{institute in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{section in head/foot}{fg = autumn-dark-grey}
    \setbeamercolor*{subsection in head/foot}{fg = autumn-dark-grey}
    
    % Sidebars
    \setbeamercolor*{sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{section in sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{section in sidebar shaded}{fg = autumn-dark-grey}
    \setbeamercolor*{subsection in sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{subsection in side shaded}{fg = autumn-dark-grey}
    \setbeamercolor*{title in sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{author in sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{institute in sidebar}{fg = autumn-dark-grey}
    \setbeamercolor*{date in sidebar}{fg = autumn-dark-grey}
    
    % Navigation bars
    \setbeamercolor*{mini frames}{fg = autumn-brown}
    \setbeamercolor*{mini frame}{fg = autumn-brown}
    
    % Navigation symbols
    \setbeamercolor*{navigation symbols}{fg = autumn-dark-grey}
    \setbeamercolor*{navigation symbols dimmed}{fg = autumn-dark-grey}

% Elements of a frame
    % Frame title
    \setbeamercolor*{frametitle}{fg = autumn-green}
    
    % Abstract
    \setbeamercolor*{abstract}{fg = autumn-brown}
    
    % Hyperlinks and buttons
    \setbeamercolor*{button}{fg = autumn-red}
    \setbeamercolor*{button border}{fg = autumn-red}
    
    % Lists
    \setbeamercolor*{item}{fg = autumn-red}
    
    % Highlighting
    \setbeamercolor*{structure}{fg = autumn-red}
    \setbeamercolor*{alterted text}{fg = autumn-red}
    \setbeamercolor*{example text}{fg = autumn-red}
    
    % Blocks environments
    \setbeamercolor*{block title}{fg = autumn-red, bg = autumn-ivory}
    \setbeamercolor*{block body}{fg = autumn-dark-grey, bg = autumn-ivory}
    \setbeamercolor*{block title alerted}{fg = autumn-green, bg = autumn-ivory}
    \setbeamercolor*{block body alerted}{fg = autumn-dark-grey, bg = autumn-ivory}
    \setbeamercolor*{block title example}{fg = autumn-brown, bg = autumn-ivory}
    \setbeamercolor*{block body example}{fg = autumn-dark-grey, bg = autumn-ivory}
    
    % Theorem environments
    \addtobeamertemplate{qed symbol}{\color{autumn-dark-grey}}

    % Figures and tables
    \setbeamercolor*{caption}{fg = autumn-red}
    \setbeamercolor*{caption name}{fg = autumn-red}
    
    % Verse, quotations, and quotes
    \setbeamercolor*{verse}{fg = autumn-red}
    \setbeamercolor*{quotation}{fg = autumn-red}

    % Footnotes
    \setbeamercolor*{footnote}{fg = autumn-red}
    \setbeamercolor*{footnote mark}{fg = autumn-red}
\mode<all>
