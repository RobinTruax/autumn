\mode<presentation>

% Options
% size = \tiny , \scriptsize, \footnotesize, \small, \normalsize, \large, \Large, \LARGE, \huge, \Huge
% family = \rmfamily, \sffamily, \ttfamily, \mathrm
% shape = \upshape, \slshape, \itshape, \scshape
% series = \bf

% Title and headers
\setbeamerfont*{title}{family=\rmfamily,shape=\scshape,size=\Large}
\setbeamerfont*{subtitle}{family=\rmfamily,shape=\scshape,size=\large}
\setbeamerfont*{author}{family=\rmfamily, size = \normalsize}
\setbeamerfont*{institute}{family=\rmfamily, size = \footnotesize}
\setbeamerfont*{date}{family=\rmfamily, size = \normalsize}
\setbeamerfont*{part name}{family=\rmfamily, size = \Large}
\setbeamerfont*{section name}{family=\rmfamily, size = \Large}
\setbeamerfont*{subsection name}{family=\rmfamily, size = \Large}

% Table of contents
\setbeamerfont*{section in toc}{family=\rmfamily, series = \bf}
\setbeamerfont*{subsection in toc}{family=\rmfamily}
\setbeamerfont*{subsubsection in toc}{family=\rmfamily}

% Structural elements
\setbeamerfont*{frametitle}{family = \rmfamily, size = \Large, series = \bf}
\setbeamerfont*{framesubtitle}{family = \rmfamily, size = \normalsize}
\setbeamerfont*{page number in head/foot}{family = \rmfamily}
\setbeamerfont*{mini frame}{family = \rmfamily}
\setbeamerfont*{section in head/foot}{family = \rmfamily}
\setbeamerfont*{subsection in head/foot}{family = \rmfamily}
\setbeamerfont*{subsubsection in head/foot}{family = \rmfamily}

\mode<all>